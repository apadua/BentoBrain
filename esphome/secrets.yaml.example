# ESPHome Secrets Configuration Template
# Copy this file to secrets.yaml and fill in your actual values

# WiFi Credentials - Required
wifi_ssid: "your_wifi_ssid"
wifi_password: "your_wifi_password"

# ESPHome API Encryption - Required for Home Assistant integration
# Leave blank to auto-generate on first compilation
api_encryption_key: ""

# OTA Password - Required for wireless firmware updates
# Choose a secure password
ota_password: "your_ota_password"
